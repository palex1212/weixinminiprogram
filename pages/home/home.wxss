/* 轮播图的渲染效果 */
swiper{
  height: 420rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}

/* 主题的渲染效果 */
.home-container{
  display: flex;
  justify-content: center;
  align-items: center;
}
.home-container .home-container-box{
  height: 410rpx;
  width: 85%;
  border-radius: 30rpx;
  background-color: rgba(0, 0, 0, 0.03);
}

/* 多功能应用的渲染效果 */
.mult-function{
  display: flex;
  flex-wrap: wrap;
}
.mult-function .campus-function{
  width: 25%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.mult-function .campus-function image{
  width: 80rpx;
  height: 80rpx;
}
.mult-function .campus-function text{
  font-size: 30rpx;
}
.mult-function .other-function{
  width: 25%;
  height: 145rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.mult-function .other-function image{
  width: 70rpx;
  height: 70rpx;
}
.mult-function .other-function text{
  font-size: 26rpx;
}

/* 楼层结构的渲染效果 */
.floor-container{
  padding-top: 10rpx;
}
.floor-container text{
  font-size: 50rpx;
  padding: 0 10rpx;
  font-weight: bold;
  color: rgb(255, 166, 0);
}
.floor-img-box{
  display: flex;
  padding-left: 10rpx;
  padding-top: 10rpx;
}
.floor-img-box .right-img-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}